<h1 class='text-center mb-5 pt-3'>Article listing page</h1>

    <div class='container d-flex flex-column'>
        <div class='row justify-content-md-center'>
            <% @articles.each do |article|%>
            <div class='col-8'>
                <div class="card text-center mb-3 shadow rounded bg-white">
                    <div class="card-header font-italic">
                        By Ezzywealth
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-success text-capitalize">
                        <%= link_to article.title, article_path(article), class: 'text-success'%>
                        </h5>
                        <p class="card-text"> <%= article.description %> </p>
                
                        <div class='d-flex justify-content-center'>
                            <%= link_to 'Show', article_path(article), class: 'btn btn-outline-info mr-2'%>
                            <%= link_to 'edit', edit_article_path(article), class: 'btn btn-outline-success mr-2'%>
                            <%= button_to 'delete', article_path(article), method: :delete, data:{turbo_confirm: 'Are you sure?'}, class: 'btn btn-outline-danger'%>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                       <small> Created <%= time_ago_in_words(article.created_at)%> ago, edited <%= time_ago_in_words(article.updated_at) %> ago   
                       </small>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
    


    <p>
    <%= link_to 'Create new Article', new_article_path %>
    </p>
    <p>
    <%= link_to 'Go Home',  %>
    </p>
